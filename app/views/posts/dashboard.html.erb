
<table class="table">
    <tr>
        <th>Id</th>
        <th>Titulo</th>
        <th>Fecha de creacion</th>
        <th>Fecha de modificacion</th>
        <th>Imagen</th>
        <th>Comentario</th>
    </tr>
    <% @posts.each do |post| %>
        <tr>
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= post.created_at %></td>
            <td><%= post.updated_at %></td>
            <td><img src=<%= post.image_url %>></td>
            <td><%= post.content %></td>
        </tr>
    <% end %>
    
  </table>