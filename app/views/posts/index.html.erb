
<table class="table">
  <tr>
      <th>Titulo</th>
      <th>Fecha</th>
      <th>Imagen</th>
      <th>Comentario</th>
  </tr>
  <% @posts.each do |post| %>
      <tr>
          <td><%= post.title %></td>
          <td><%= post.created_at %></td>
          <td><img src=<%= post.image_url %>></td>
          <td><%= post.content %></td>
      </tr>
  <% end %>
  
</table>
