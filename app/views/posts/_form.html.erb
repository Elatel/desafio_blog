<form method="post" action="/posts" id="create_post">
  <h2>Titulo</h2>
  <input name="title" >
  <h2>Imagen</h2>
  <input name="image_url" >
  <h2>Contenido</h2>
  <textarea name="content"></textarea>
  <input type="submit" value="enviar">
</form>

<% if @post.errors.any? %>
    <div id ="error_explanation">
        <h2>
            <%= pluralize(@post.errors.count, "errores") %>
            Your post is wrong
        </h2>
        <ul>
            <% @post.errors.full_messages.each do |msg|%>
            <li><%= msg %></li>
            <% end %>
        </ul>
  </div>
<% end %>
